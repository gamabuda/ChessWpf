<Window x:Class="ChessWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessWpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ChessWpf" MinHeight="600" MinWidth="600" SizeToContent="Width">
    <Viewbox>
        <Grid x:Name="Board"
            Width = "800"
            Height = "800">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/Images/board.png"/>
            </Grid.Background>

            <UniformGrid x:Name="PiecesGrid"
                         Columns="8"
                         Rows="8">
            </UniformGrid>
        </Grid>
    </Viewbox>
</Window>
